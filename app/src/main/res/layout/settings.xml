<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settings_layout"
    android:alpha="1"
    android:background="#104C7A"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/settings"
        android:layout_width="403dp"
        android:layout_height="52dp"
        android:background="@drawable/round_corner"
        android:gravity="center"
        android:text="Enter number of players"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/team_one_size"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_corner"
        android:gravity="center"
        android:text="1"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.649"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings" />

    <TextView
        android:id="@+id/teamA"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="A"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings" />

    <ImageView
        android:id="@+id/team_one_minus"
        style="?android:borderlessButtonStyle"
        android:layout_width="88dp"
        android:layout_height="69dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="36dp"
        android:onClick="teamSub"
        app:layout_constraintEnd_toStartOf="@+id/team_one_size"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings"
        app:srcCompat="@drawable/minus" />

    <ImageView
        android:id="@+id/team_one_plus"
        style="?android:borderlessButtonStyle"
        android:layout_width="88dp"
        android:layout_height="69dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="10dp"
        android:onClick="teamAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toEndOf="@+id/team_one_size"
        app:layout_constraintTop_toBottomOf="@+id/settings"
        app:srcCompat="@drawable/add" />

    <TextView
        android:id="@+id/team_two_size"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/round_corner"
        android:gravity="center"
        android:text="1"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.649"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings" />

    <TextView
        android:id="@+id/teamB"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginTop="148dp"
        android:gravity="center"
        android:text="B"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings" />

    <ImageView
        android:id="@+id/team_two_minus"
        style="?android:borderlessButtonStyle"
        android:layout_width="88dp"
        android:layout_height="69dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="168dp"
        android:onClick="teamSub"
        app:layout_constraintEnd_toStartOf="@+id/team_one_size"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings"
        app:srcCompat="@drawable/minus" />

    <TextView
        android:id="@+id/round_title"
        android:layout_width="408dp"
        android:layout_height="84dp"
        android:background="@drawable/round_corner"
        android:gravity="center"
        android:text="Enter number of clues per player"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team_two_size"
        app:layout_constraintVertical_bias="0.15" />

    <ImageView
        android:id="@+id/team_two_plus"
        style="?android:borderlessButtonStyle"
        android:layout_width="88dp"
        android:layout_height="69dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="10dp"
        android:onClick="teamAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toEndOf="@+id/team_one_size"
        app:layout_constraintTop_toBottomOf="@+id/settings"
        app:srcCompat="@drawable/add" />

    <TextView
        android:id="@+id/round"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_corner"
        android:gravity="center"
        android:text="1"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/round_title" />

    <ImageView
        android:id="@+id/round_minus"
        style="?android:borderlessButtonStyle"
        android:layout_width="88dp"
        android:layout_height="69dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="36dp"
        android:onClick="roundSub"
        app:layout_constraintEnd_toStartOf="@+id/team_one_size"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/round_title"
        app:srcCompat="@drawable/minus" />

    <ImageView
        android:id="@+id/round_plus"
        style="?android:borderlessButtonStyle"
        android:layout_width="88dp"
        android:layout_height="69dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="10dp"
        android:onClick="roundAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toEndOf="@+id/team_one_size"
        app:layout_constraintTop_toBottomOf="@+id/round_title"
        app:srcCompat="@drawable/add" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="91dp"
        android:layout_height="89dp"
        android:layout_marginBottom="4dp"
        android:onClick="moveToNextActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/round"
        app:layout_constraintVertical_bias="0.89"
        app:srcCompat="@drawable/next_button" />

</androidx.constraintlayout.widget.ConstraintLayout>